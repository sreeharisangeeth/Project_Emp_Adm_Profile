@model Project_Emp_Adm_Profile.Models.SignIn

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutforLogin.cshtml";
}
<div class="formBox" style="margin-bottom:0; padding-bottom:0;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="my-auto" style="padding-top:15px">

                <img src="~/Image/emp3.png" width="125" />

            </div>
            <h3 class="text-center text-white display-3" style="padding-top: 25px; padding-bottom:25px;">Login</h3>

            <div class="my-auto">
                <div class="form-group">
                    <div class="row">
                        <div class="">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        @*@Html.LabelFor(model => model.EId, htmlAttributes: new { @class = "lb col-md-4" })*@
                        <label> UserId </label>
                    </div>

                    <div class="col-md-8">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 1.2em;background-color:lightcyan;font-family:'Comic Sans MS';" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="my-auto">
                <div class="form-group">
                    <div class="col-md-4">
                        <label> Password </label>
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "font-size: 1.2em;background-color:lightcyan;font-family:'Comic Sans MS';" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="my-auto">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Login" class="btn btn-primary" width="60" style="font-size:small;" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
