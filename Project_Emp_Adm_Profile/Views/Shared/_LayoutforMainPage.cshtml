<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*CSS only*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    @*JavaScript Bundle with Popper*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link href="~/Content/Layout.css" rel="stylesheet" />
</head>
<body>
    <div class="hero">

        <div class="topPanel">
            <h2 class=" App-Name text-white">SOTI Chatters</h2>

        </div>
        <div class="profilePanel">
            @*Partial View of Profile*@
        <div>
            @{
                if (Session["EId"] != null)
                {
                    @Html.Partial("PartialViewEmpDetails",Session["EmployeeObj"]);
                }
                else if (Session["AId"] != null)
                {
                    @Html.Partial("PartialViewAdminDetails", Session["AdminObj"]);

                }
            }

            @*@{Html.RenderPartial("_Welcome");}
            <partial name="_Welcome"/>*@
        </div>
        </div>
        <div class="queryPanel">
            @*<h2 class=" text-center text-white Heading ">Query</h2>*@
            @*Query View will be rendered here*@
            
            @RenderBody() 
        </div>
        <div class="newsPanel">
            <div>
                @Html.Action("Index", "NewsFeed1")
            </div>
    @*Partial View of News*@
        </div>
    </div>
</body>
</html>
