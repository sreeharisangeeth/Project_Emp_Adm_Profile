<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

@Styles.Render("~/Content/NewsFeed.css")

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="card-deck">
    @foreach (var item in Model)
    {
    <div class="card w-100 text-center" id="newsid">
        <div class="card-body">
            <h5 class="card-title">@item.Topic</h5>

            <h6 class="card-text">@item.Descrip</h6>

            @using (Html.BeginForm("Newsfeedlike", "NewsFeed1"))
            {
            <button>
                <i onclick="myFunction(this)" class="fa fa-thumbs-o-up"></i>

            </button>
            <span>@item.countlikes</span>
            <input type="hidden" name="nid" value=@item.NId />

            }


        </div>
        <div class="card-footer">
            <small class="text-muted">@item.NDate.ToShortDateString() @item.AName</small>
        </div>
    </div>
    }
</div>
