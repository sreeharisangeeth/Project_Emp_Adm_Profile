@model Project_Emp_Adm_Profile.Models.Admin

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutForProfilePage.cshtml";

}

<h2>Delete</h2>

<div class="leftPanel">
    @Html.Partial("PV_AdminEditLeftPanel", Session["AdminObj"])
</div>
<div class="RightPanel">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Admin</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt style="font-size: 1.3em;background-color:deepskyblue;color:black;width:fit-content; border-radius:6px; font-family:'Comic Sans MS';">
                @Html.DisplayNameFor(model => model.AName)
            </dt>

            <dd style="font-size: 1.3em;background-color:deepskyblue;color:black;width:fit-content; border-radius:6px; font-family:'Comic Sans MS';">
                @Html.DisplayFor(model => model.AName)
            </dd>

            @*<dt>
                @Html.DisplayNameFor(model => model.APassword)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.APassword)
            </dd>*@

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left:80px;">
                <input type="submit" value="Delete" class="btn btn-default" style="color: whitesmoke; font-size: 1.1em;width:70px; background-color:palevioletred; font-family:Courier New, Courier, monospace;" />
            </div>
            <div style="margin-left:0px;">
                <i class="fa fa-3x fa-address-book-o" aria-hidden="true"
                   onclick="location.href='@Url.Action("Index", "Admins")'"></i>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 text-success">
                    @ViewBag.DeleteStatus
                </div>
            </div>
        }
    </div>
 </div>